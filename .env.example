# Core Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=5000
SECRET_KEY=your-super-secret-key-change-in-production

# External API Keys (Optional - app will work without these)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# Database Configuration (Optional - app uses fallback if unavailable)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_ai
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration (Optional - app uses in-memory fallback)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Machine Learning Configuration
LSTM_SEQUENCE_LENGTH=60
LSTM_EPOCHS=10
LSTM_BATCH_SIZE=32
MODEL_SAVE_PATH=./models

# Rate Limiting
API_RATE_LIMIT=500

# Production Settings for Render/Cloud Deployment
SKIP_ML_TRAINING=true
MINIMAL_STARTUP=true